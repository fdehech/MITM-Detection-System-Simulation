# ========================================
# MITM Detection System - Configuration
# ========================================

# ----------------
# Client Settings
# ----------------
# Host and port for the client to connect to (proxy or server)
CLIENT_PROXY_HOST=proxy
CLIENT_PROXY_PORT=9000
# Interval between messages in seconds
CLIENT_MESSAGE_INTERVAL=1.0
# Payload content to send
CLIENT_MESSAGE_PAYLOAD=HELLO

# ----------------
# Proxy Settings
# ----------------
PROXY_LISTEN_HOST=0.0.0.0
PROXY_LISTEN_PORT=9000
PROXY_SERVER_HOST=server
PROXY_SERVER_PORT=9001
# Mode: transparent, modify, replay, delay
PROXY_MODE=transparent
# Delay in seconds (only for 'delay' mode)
PROXY_DELAY_SECONDS=3.0
PROXY_BUFFER_SIZE=4096

# ----------------
# Server Settings
# ----------------
SERVER_LISTEN_HOST=0.0.0.0
SERVER_LISTEN_PORT=9001
# Max allowed delay in seconds before flagging as attack
SERVER_MAX_DELAY=2.0
SERVER_BUFFER_SIZE=4096
# Enable/Disable detection logic
SERVER_DETECTION_ENABLED=true
